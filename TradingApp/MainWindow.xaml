<Window x:Class="TradingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TradingApp" Height="600" Width="900"
        Closed="Window_Closed">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Левый блок: выбор тикера -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
            <TextBlock Text="Тикер" FontWeight="Bold" Margin="0,0,0,4"/>
            <ComboBox x:Name="TickerComboBox"
                Width="150"
                IsEditable="True"
                SelectionChanged="TickerComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Правый блок: стакан -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Bids -->
            <GroupBox Header="Bids" Grid.Column="0" Margin="0,0,5,0">
                <DataGrid x:Name="BidsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Цена"   Binding="{Binding Price}"    Width="*"/>
                        <DataGridTextColumn Header="Объём"   Binding="{Binding Quantity}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Asks -->
            <GroupBox Header="Asks" Grid.Column="1" Margin="5,0,0,0">
                <DataGrid x:Name="AsksGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Цена"   Binding="{Binding Price}"    Width="*"/>
                        <DataGridTextColumn Header="Объём"   Binding="{Binding Quantity}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>